{
	"info": {
		"_postman_id": "ai-expenses-local-collection",
		"name": "AI Expenses API (Local)",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"description": "Local collection for AI Expenses API on http://localhost:4000"
	},
	"variable": [
		{ "key": "baseUrl", "value": "http://localhost:4000" },
		{ "key": "token", "value": "" },
		{ "key": "expenseId", "value": "" }
	],
	"item": [
		{
			"name": "Health",
			"request": { "method": "GET", "url": "{{baseUrl}}/api/health" }
		},
		{
			"name": "Auth",
			"item": [
				{
					"name": "Register",
					"request": {
						"method": "POST",
						"header": [{ "key": "Content-Type", "value": "application/json" }],
						"url": "{{baseUrl}}/api/auth/register",
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"u_local\",\n  \"email\": \"u_local@example.com\",\n  \"password\": \"pass1234\"\n}"
						}
					}
				},
				{
					"name": "Login",
					"request": {
						"method": "POST",
						"header": [{ "key": "Content-Type", "value": "application/json" }],
						"url": "{{baseUrl}}/api/auth/login",
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"u_local\",\n  \"password\": \"pass1234\"\n}"
						}
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"const json = pm.response.json();",
									"if (json && json.token) { pm.collectionVariables.set('token', json.token); }"
								],
								"type": "text/javascript"
							}
						}
					]
				}
			]
		},
		{
			"name": "Expenses",
			"item": [
				{
					"name": "List",
					"request": {
						"method": "GET",
						"url": "{{baseUrl}}/api/expenses?page=1&limit=10",
						"header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
					}
				},
				{
					"name": "Create",
					"request": {
						"method": "POST",
						"url": "{{baseUrl}}/api/expenses",
						"header": [
							{ "key": "Authorization", "value": "Bearer {{token}}" },
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Coffee\",\n  \"category\": \"FOOD\",\n  \"amount\": 4.5,\n  \"taxPercent\": 10,\n  \"isRecurring\": false\n}"
						}
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"const json = pm.response.json();",
									"if (json && json._id) { pm.collectionVariables.set('expenseId', json._id); }"
								],
								"type": "text/javascript"
							}
						}
					]
				},
				{
					"name": "Get by Id",
					"request": {
						"method": "GET",
						"url": "{{baseUrl}}/api/expenses/{{expenseId}}",
						"header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
					}
				},
				{
					"name": "Update",
					"request": {
						"method": "PUT",
						"url": "{{baseUrl}}/api/expenses/{{expenseId}}",
						"header": [
							{ "key": "Authorization", "value": "Bearer {{token}}" },
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"amount\": 6.25\n}"
						}
					}
				},
				{
					"name": "Delete",
					"request": {
						"method": "DELETE",
						"url": "{{baseUrl}}/api/expenses/{{expenseId}}",
						"header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
					}
				}
			]
		},
		{
			"name": "AI",
			"item": [
				{
					"name": "Suggest Category",
					"request": {
						"method": "POST",
						"url": "{{baseUrl}}/api/ai/suggest-category",
						"header": [
							{ "key": "Authorization", "value": "Bearer {{token}}" },
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Cab to airport\",\n  \"notes\": \"Business trip\"\n}"
						}
					}
				}
			]
		}
	]
}
